<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
  <%- include('../includes/nav.ejs') %>

  <main>
    <div class="container center add-pad">
      <h1 class="admin-h1">Add A New Dog!</h1>
      
      <form class="dog-form" action="/admin/add-dog" method="POST">
        <div class="form-control">
          <label class="form-label" for="name">Dog's Breed</label>
          <input class="form-input" type="text" name="name" id="name" required>
        </div>

        <div class="form-control">
          <label class="form-label" for="imageUrl">Image Url</label>
          <input class="form-input"  type="text" name="imageUrl" id="imageUrl" required>
        </div>

        <div class="form-control">
          <label class="form-label" for="description">Description</label>
          <input class="form-input"  type="text" name="description" id="description" required>
        </div>
        
        <button class="btn" type="submit">Edit Dog</button>
        <button class="btn red" type="submit">Delete Dog</button>
      </form>
  </div>
  </main>

<%- include('../includes/end.ejs') %>